FROM golang:1.21-alpine AS builder

WORKDIR /app

COPY server/go.mod server/go.sum ./
RUN go mod download

COPY server/ ./
RUN go build -o websocket-server .

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/websocket-server .

EXPOSE 8080

CMD ["./websocket-server"]
